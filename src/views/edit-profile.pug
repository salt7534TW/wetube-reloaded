extends base

block content 
    if errorMessage 
        span=errorMessage
    img(scr="/"+loggedInUser.avatarUrl, width="500", height="500")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(placeholder="Name", name="name", type="text",requied,value=loggedInUser.name)
        input(placeholder="Email", name="email", type="email",requied,value=loggedInUser.email)
        input(placeholder="Username", name="username", type="text",requied,value=loggedInUser.username)
        input(placeholder="Location", name="location", type="text",requied,value=loggedInUser.location)
        input(type="submit", value="Update Profile")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;